<Window x:Class="GetCurrentDevices.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetCurrentDevices"
        mc:Ignorable="d"
        Title="Device Info App" Height="800" Width="400">
    <Grid>
        <Button Content="Get Device Info" Click="OnGetDeviceInfoClick" Margin="20,717,228,15"/>
        <Button Content="Clear" Click="OnClearClick" Margin="228,717,20,15"/>
        <TextBox x:Name="DeviceInfoTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="360" Height="685" Margin="0,10,0,0" TextWrapping="Wrap" IsReadOnly="True"/>
    </Grid>
</Window>
